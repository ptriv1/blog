{{#each posts as |post| }}
<div class="post-list">
    <div>
        <h2 class="post-title">
            <a href="/post/{{post.id}}">{{post.name}}</a>
        </h2>
        <p class="footer-post">Created by {{post.user.name}} on {{format_date post.date_created}}</p>
    </div>
    <div>
        <p>
            {{post.description}}
        </p>
    </div>
</div>
{{/each}}